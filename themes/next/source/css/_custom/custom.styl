// Custom styles.

/*修改选择字体块背景颜色*/
::selection {
    background: #9DA6AC;
    color: #222;
}

/*设置文章字体排版合理*/
.post-body{
	text-align: justify;
}

/*去掉图片边框*/
.posts-expand .post-body img{
  	border: 0px;
}

/*超链接设置颜色*/
.post-body p a {
color: #0593d3;
border-bottom: none;
&:hover {
color: #0477ab;
text-decoration: underline;
}
}

/*高亮文字颜色*/
code {
    color: #f61111;
    background: #fbf7f8;
    margin: 2px;
}
// 大代码块的自定义样式
.highlight, pre {
    margin: 5px 0;
    padding: 5px;
    border-radius: 3px;
}
.highlight, code, pre {
    border: 1px solid #d6d6d6;
}
