/*设置文章字体排版合理*/
.post-body{
	text-align: justify;
}

/*去掉图片边框*/
.posts-expand .post-body img{
  	border: 0px;
}

/*超链接设置颜色*/
.post-body p a {
color: #0593d3;
border-bottom: none;
&:hover {
color: #0477ab;
text-decoration: underline;
}
}

/*高亮文字颜色*/
code {
    color: #f61111;
    background: #fbf7f8;
    margin: 2px;
}

/*无序列表样式，空心圆为 circle，实心圆为 disc*/
.posts-expand .post-body ul li {
    list-style: disc;
}

/*右下角返回顶部按钮样式*/
.back-to-top {
    line-height: 1.5;
    right: 40px;
    color: rgb(255,255,255);
    padding-right: 20px;
    padding-left: 20px;
    padding-top: 10px;
    padding-bottom: 10px;
    background-color: rgb(0,0,0);
    border-radius: 0;
    box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.35);
}